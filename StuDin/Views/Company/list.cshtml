@model List<StuDin.Models.CompanyModel>
@{
    ViewData["Title"] = "Home Page";
}

<input type="submit" action="Index" value="Submit"/>

<form>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Company Name</th>
                <th>Contact Person</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Country</th>
            </tr>
        </thead>
        @if (Model != null && Model.Any())
        {
            @foreach (var companies in Model)
            {
                <tr>
                    <td>@companies.Id</td>
                    <td>@companies.CompanyName</td>
                    <td>@companies.ContactPerson</td>
                    <td>@companies.Email</td>
                    <td>@companies.PhoneNumber</td>
                    <td>@companies.Address</td>
                    <td>@companies.Country</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a asp-controller="Company" asp-action="Edit" asp-route-id="@companies.Id" class="btn btn-primary">Edit</a>
                            <a asp-controller="Company" asp-action="Delete" asp-route-id="@companies.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>


            }
        }
        else
        {
            <tr>
                <td>
                    <div>
                        No Company Details Found
                    </div>
                </td>
            </tr>
        }

    </table>
</form>