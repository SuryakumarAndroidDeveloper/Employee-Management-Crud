@model IEnumerable<EmployeeManagement.Models.EmployeModel>

@{
    ViewData["Title"] = "Employee List";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h2>Employee List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Company Name</th>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Address</th>
            <th>City</th>
            <th>Pincode</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.CompanyName</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Mobile</td>
                <td>@employee.Address</td>
                <td>@employee.City</td>
                <td>@employee.Pincode</td>
                <td >
                    <a  asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                  </td>
                <td>
                    <form action="DeactivateEmployee" method="post">
                         <input type="hidden" name="id" value="@employee.Id" />
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</button>
                      </form>
                </td>
                <td>
                    <a asp-action="ViewEmployee" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>


