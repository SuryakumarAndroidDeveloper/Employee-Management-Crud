@model List<EmployeeManagement.Models.CompanyModel>

@{
    ViewData["Title"] = "Company List";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h2>Company List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Company Name</th>
            <th>Contact Person</th>
            <th>Gender</th>
            <th>Selected Areas</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Country</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.Id</td>
                <td>@company.CompanyName</td>
                <td>@company.ContactPerson</td>
                <td>@company.Gender</td>
                <td>
                    @company.Areas
                </td>
                <td>@company.Email</td>
                <td>@company.PhoneNumber</td>
                <td>@company.Address</td>
                <td>@company.Country</td>
                <td>
                    <div class="action-buttons">
                    <a asp-action="EditCompany" asp-route-id="@company.Id" class="btn btn-primary">Edit</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
