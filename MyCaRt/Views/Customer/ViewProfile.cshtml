@model MyCaRt.Models.CustomerModel

@{
    ViewData["Title"] = "ViewProfile";
}
@if (TempData["SavedChanges"] != null)
{
    <div class="alert alert-success">
        @TempData["SavedChanges"]
    </div>
}
@{
    var userId = @ViewBag.UserId; // Default to 0 if session value is null
}
<h1>ViewProfile</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer_Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer_Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer_FName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer_FName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer_LName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer_LName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer_Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer_Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer_Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer_Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer_Mobile)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer_Mobile)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer_InterestedCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer_InterestedCategory)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", "Customer", new { id = userId }, new { @class = "action-links edit" })
    <form class="action-links-form" asp-controller="Customer" asp-action="Deactivate" method="post" style="display: inline-block;">
        <input type="hidden" name="id" value="@ViewBag.UserId" />
        <button type="submit" class="action-links delete" onclick="return confirm('Are you sure you want to delete this account?')">Delete</button>
    </form>
</div>
