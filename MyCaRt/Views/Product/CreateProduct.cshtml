@model MyCaRt.Models.ProductModel

@{
    ViewData["Title"] = "CreateProduct";
}

<h1>CreateProduct</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <div class="containerindex">
            <form asp-action="CreateProduct" enctype="multipart/form-data" asp-validation-summary="All">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                    <label style="margin-right:1000px" asp-for="Product_Id" class="control-label"></label>
                <input asp-for="Product_Id" class="form-control" />
                <span asp-validation-for="Product_Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                    <label style="margin-right:1000px" asp-for="Product_Category" class="control-label"></label>
                <select asp-for="Product_Category" class="form-control" asp-items="@ViewBag.categoryData">
                    <option value="">Select ProductCategory</option>
                </select>
                <span asp-validation-for="Product_Category" class="text-danger"></span>
            </div>
      
            <div class="form-group">
                <label style="margin-right:1000px" asp-for="Product_Code" class="control-label"></label>
                <input asp-for="Product_Code" class="form-control" />
                    <span style="margin-right:170px" id="productCodeError" class="text-danger" style="display:none;"></span>
                <span asp-validation-for="Product_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label style="margin-right:1000px" asp-for="Product_Name" class="control-label"></label>
                <input asp-for="Product_Name" class="form-control" />
                <span asp-validation-for="Product_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label style ="margin-right:1000px" asp-for="Product_Price" class="control-label"></label>
                <input asp-for="Product_Price" class="form-control" />
                <span asp-validation-for="Product_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label style="margin-right:1000px" asp-for="Product_Description" class="control-label"></label>
                <input asp-for="Product_Description" class="form-control" />
                <span asp-validation-for="Product_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label style="margin-right:1000px" asp-for="Available_Quantity" class="control-label"></label>
                <input asp-for="Available_Quantity" class="form-control" />
                <span asp-validation-for="Available_Quantity" class="text-danger"></span>
            </div><br />
                <div class="form-group">
                    <label asp-for="FilePath" class="control-label"></label>
                    <input asp-for="FilePath" class="form-control-file" type="file" />
                    <span style="margin-right:170px" id="filepathError" class="text-danger" style="display:none;"></span>
                    <span asp-validation-for="FilePath" class="text-danger"></span>
                </div>

<br />
            <div class="form-group">
                    <input type="submit" id="submitButton" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <br/>
            <div>
                <a asp-action="ListOfFullProduct">Back to List</a>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $(document).ready(function () {
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage && errorMessage.includes("Product code already exists.")) {
            $("#productCodeError").text(errorMessage).show();
        }
            if (errorMessage && errorMessage.includes("Select the filepath.")) {
                $("#filepathError").text(errorMessage).show();
            }
        });

  </script>
}
